{
  "name": "@molty/wakawars",
  "version": "0.1.2",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "wait-on ../../packages/shared/dist/index.js && vite --port 5173",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:electron": "wait-on dist/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron dist/main.js",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "pack": "npm run build && electron-builder --mac --publish=never",
    "dist": "npm run build && electron-builder --mac --publish=always",
    "lint": "echo \"lint not configured\""
  },
  "dependencies": {
    "@molty/shared": "workspace:*",
    "electron-updater": "^6.3.0",
    "fs-extra": "^11.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@electron/notarize": "^2.3.2",
    "@types/node": "^22.10.2",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "app.molty.wakawars",
    "productName": "WakaWars",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asar": true,
    "afterSign": "build/notarize.cjs",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist"
    },
    "extraResources": [
      {
        "from": "assets/trayTemplate.png",
        "to": "trayTemplate.png"
      },
      {
        "from": "assets/trayTemplate@2x.png",
        "to": "trayTemplate@2x.png"
      }
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "https://wakawars.molty.app/updates"
      }
    ]
  }
}
